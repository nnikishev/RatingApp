<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:RatingApp.Behaviors"
             x:Class="RatingApp.Views.LoginPage"
             Title="Login"
             NavigationPage.HasNavigationBar="False">
    
    <Grid>
        <!-- Background Image -->
        <Image Source="login_background.jpg"
               Aspect="AspectFill"
               Opacity="0.3"/>
        
        <!-- Overlay -->
        <BoxView Color="Black" Opacity="0.5"/>
        
        <!-- Login Form -->
        <ScrollView>
            <VerticalStackLayout Spacing="25" 
                               Padding="30"
                               VerticalOptions="Center">
                
                <!-- App Logo/Title -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="RATING APP" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Please sign in to continue" 
                           FontSize="16" 
                           TextColor="White"
                           HorizontalOptions="Center"
                           Opacity="0.8"/>
                </VerticalStackLayout>
                
                <!-- Login Form Container -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True">
                    
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- Username Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Username" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#495057"/>
                            <Entry Text="{Binding Username}"
                                   Placeholder="Enter your username"
                                   BackgroundColor="#F8F9FA"
                                   TextColor="#212529"
                                   HeightRequest="50"
                                   CornerRadius="10"
                                   ClearButtonVisibility="WhileEditing">
                                <Entry.Behaviors>
                                    <behaviors:TextChangedBehavior 
                                        Command="{Binding ClearErrorCommand}"/>
                                </Entry.Behaviors>
                            </Entry>
                        </VerticalStackLayout>
                        
                        <!-- Password Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Password" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#495057"/>
                            <Entry Text="{Binding Password}"
                                   Placeholder="Enter your password"
                                   BackgroundColor="#F8F9FA"
                                   TextColor="#212529"
                                   IsPassword="True"
                                   HeightRequest="50"
                                   CornerRadius="10"
                                   ClearButtonVisibility="WhileEditing">
                                <Entry.Behaviors>
                                    <behaviors:TextChangedBehavior 
                                        Command="{Binding ClearErrorCommand}"/>
                                </Entry.Behaviors>
                            </Entry>
                        </VerticalStackLayout>
                        
                        <!-- Error Message -->
                        <Label Text="{Binding ErrorMessage}"
                               FontSize="14"
                               TextColor="#DC3545"
                               HorizontalOptions="Center"
                               IsVisible="{Binding IsLoginFailed}"/>
                        
                        <!-- Login Button -->
                        <Button Text="SIGN IN" 
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#FF3E3EB"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="10"
                                Margin="0,10,0,0"/>
                        
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Loading Indicator -->
                <ActivityIndicator IsVisible="{Binding IsBusy}"
                                  IsRunning="{Binding IsBusy}"
                                  HorizontalOptions="Center"
                                  Color="White"
                                  Scale="1.5"/>
                
            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
    
</ContentPage>